<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_default_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="io.yulw.rcctrl.activity.HomeActivity">

    <EditText
        android:id="@+id/fragment_default_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fragment_default_switch_on_off"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:ems="10"
        android:hint="@string/rcctrlhint">

        <requestFocus />
    </EditText>

    <Switch
        android:id="@+id/fragment_default_switch_on_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment_default_editText"
        android:layout_alignRight="@+id/fragment_default_editText"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:checked="false"
        android:text="Operation:" />

    <Button
        android:id="@+id/fragment_default_button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fragment_default_editText"
        android:layout_alignRight="@+id/fragment_default_editText"
        android:layout_below="@+id/fragment_default_switch_on_off"
        android:layout_marginTop="24dp"
        android:text="Send" />

</RelativeLayout>
