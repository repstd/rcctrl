<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/screen_home_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawerLayout">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/screen_drawer">

    <android.support.v7.widget.Toolbar
        android:id="@+id/screen_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_deep_teal_500"
        android:minHeight="?attr/actionBarSize"
        tools:context=".Toolbar"
    />
    <FrameLayout
        android:id="@+id/screen_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/screen_toolbar"
        tools:context=".FrameLayout"/>
    </RelativeLayout>
    <fragment
        android:id="@+id/screen_fragment_naviation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/screen_fragment_menu" />

</android.support.v4.widget.DrawerLayout>
