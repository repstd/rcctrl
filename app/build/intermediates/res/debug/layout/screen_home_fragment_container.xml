<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen_home_fragment_container">

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/screen_home_fragment_container_pager_sliding_tab"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/background_floating_material_light"
        android:elevation="@dimen/elevation_ten"
        android:fillViewport="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/screen_home_fragment_container_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screen_home_fragment_container_pager_sliding_tab"
        android:background="@android:color/white" />
    <FrameLayout
        android:id="@+id/screen_home_fragment_container_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/screen_home_fragment_container_pager_sliding_tab"
        tools:context=".FrameLayout"/>
</RelativeLayout>
